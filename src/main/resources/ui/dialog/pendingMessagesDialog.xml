<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog closable="true" close="removeDialog(this)" bottom="10" columns="1" gap="10" icon="/icons/history.png" left="10" modal="true" name="pendingMessagesDialog" resizable="true" right="10" text="i18n.common.pending.messages" top="10">
    <table colspan="3" name="pendingList" selection="multiple" weightx="1" weighty="1">
        <header>
            <column icon="/icons/user_sender.png" text="i18n.common.sender" width="100"/>
            <column icon="/icons/user_receiver.png" text="i18n.common.recipient" width="100"/>
            <column icon="/icons/message.png" text="i18n.common.message" width="0"/>
        </header>
    </table>
    <label text="i18n.sentence.pending.messages"/>
    <panel gap="5" halign="center">
    	<button icon="/icons/vote_yes.png" text="i18n.action.yes" action="exit"/>
        <button icon="/icons/vote_no.png" text="i18n.action.no" action="removeDialog(pendingMessagesDialog)"/>
        <button action="removeDialog(pendingMessagesDialog)" icon="/icons/cross.png" text="i18n.action.cancel"/>
    </panel>
</dialog>
