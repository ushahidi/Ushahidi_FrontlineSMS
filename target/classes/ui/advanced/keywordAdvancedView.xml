<?xml version="1.0" encoding="ISO-8859-1"?>
 <panel bottom="5" columns="1" gap="5" icon="/icons/keywordAction.png" left="5" name="pnKeywordActionsAdvanced" right="5" top="5" weightx="1" weighty="1">
            <table delete="showConfirmationDialog('removeSelectedFromKeywordActionsList')" perform="keywordManager_edit(actionList)" action="enableKeywordActionFields(this, keyActPanel)" name="actionList" weightx="1" weighty="1">
                <header>
                    <column width="23"/>
                    <column icon="/icons/keywordAction.png" text="i18n.common.action" width="358"/>
                    <column icon="/icons/date_start.png" text="i18n.common.start.date" width="80"/>
                    <column icon="/icons/date_end.png" text="i18n.common.end.date" width="80"/>
                    <column icon="/icons/status.png" text="i18n.common.live" width="45"/>
                    <column icon="/icons/hits.png" text="i18n.common.hits" width="45"/>
                </header>
                <popupmenu menushown="enableKeywordActionFields(actionList, this)" name="actionsMenu">
                    <menu icon="/icons/keywordAction_add.png" text="i18n.action.add.action" name="miCreate">
	                    <menuitem action="keywordTab_createAction(0)" icon="/icons/sms_autoReply.png" text="i18n.action.create.auto.reply"/>
	                    <menuitem action="keywordTab_createAction(1)" icon="/icons/sms_autoForward.png" text="i18n.common.auto.forward"/>
	                    <menuitem action="keywordTab_createAction(2)" icon="/icons/group_join.png" text="i18n.action.create.join.group"/>
	                    <menuitem action="keywordTab_createAction(3)" icon="/icons/group_leave.png" text="i18n.action.create.leave.group"/>
	                    <menuitem action="keywordTab_createAction(4)" icon="/icons/survey.png" text="i18n.common.survey"/>
	                    <menuitem action="keywordTab_createAction(5)" icon="/icons/email.png" text="i18n.action.create.email"/>
	                    <menuitem action="keywordTab_createAction(6)" icon="/icons/cmd.png" text="i18n.action.create.external.command"/>
                    </menu>
                    <menuitem action="keywordManager_edit(actionList)" icon="/icons/keywordAction_edit.png" name="miEdit" text="i18n.action.edit"/>
                    <menuitem action="showConfirmationDialog('removeSelectedFromKeywordActionsList')" icon="/icons/keywordAction_delete.png" name="miDelete" text="i18n.action.delete"/>
                </popupmenu>
            </table>
            <panel name="keyActPanel" gap="5" weightx="1">
                <combobox editable="false" name="cbActionType" selected="0">
                    <choice icon="/icons/big_sms_autoReply.png" text="i18n.action.create.auto.reply"/>
                    <choice icon="/icons/big_sms_autoForward.png" text="i18n.common.auto.forward"/>
                    <choice icon="/icons/big_group_join.png" text="i18n.action.create.join.group"/>
                    <choice icon="/icons/big_group_leave.png" text="i18n.action.create.leave.group"/>
                    <choice icon="/icons/big_survey.png" text="i18n.common.survey"/>
                    <choice icon="/icons/big_email.png" text="i18n.action.create.email"/>
                    <choice icon="/icons/big_cmd.png" text="i18n.action.create.external.command"/>
                </combobox>
                <button action="keywordTab_newAction(cbActionType)" icon="/icons/big_keywordAction_add.png" name="miCreate" type="link" weighty="1"/>
                <separator/>
                <button action="keywordManager_edit(actionList)" icon="/icons/big_keywordAction_edit.png" name="miEdit" text="i18n.action.edit" weightx="1" weighty="1"/>
                <button action="showConfirmationDialog('removeSelectedFromKeywordActionsList')" icon="/icons/big_keywordAction_delete.png" name="miDelete" text="i18n.action.delete" weightx="1" weighty="1"/>
            </panel>
        </panel>
